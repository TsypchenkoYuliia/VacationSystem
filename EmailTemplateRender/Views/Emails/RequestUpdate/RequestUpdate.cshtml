@using EmailTemplateRender.Views.Shared


@model EmailTemplateRender.Views.Emails.RequestEmailViewModel

<table class="mail__content" width="60%" border="0" cellspacing="0" cellpadding="0">
    <tbody>
        <tr>
            <td>Who: @Model.Data.AuthorFullName</td>
        </tr>
        <tr>
            <td>Type: @Model.Data.RequestType</td>
        </tr>
        <tr>
            <td>Dates: @Model.Data.StartDate - @Model.Data.EndDate</td>
        </tr>
        <tr>
            <td>Duration: @Model.Data.Duration d</td> 
        </tr>
        <tr>
            <td>Comment: @Model.Data.Comment</td>
        </tr>
        <tr>
            <td>Approved: @Model.Data.ApprovedFullNames</td>
        </tr>
    </tbody>
</table>
@await Html.PartialAsync("EmailButtons", new EmailButtonsViewModel(Model.ApproveUrl, Model.RejecteUrl))